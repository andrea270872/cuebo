doctype html
html
  head
    meta(charset='utf-8')
    |   
    title chat
    |   
    meta(name='viewport', content='width=device-width, initial-scale=1')
    |   
    link(rel='stylesheet', type='text/css', href='stylesheets/normalize.css')
    |   
    link(rel='stylesheet', type='text/css', href='stylesheets/webflow.css')
    |   
    link(rel='stylesheet', type='text/css', href='stylesheets/cuebo.webflow.css')
    |   
    script(src='https://ajax.googleapis.com/ajax/libs/webfont/1.4.7/webfont.js')
    |   
    script.
      WebFont.load({
      google: {
      families: ["Bitter:400,700,400italic"]
      }
      });
    |   
    script(type='text/javascript', src='javascripts/modernizr.js')
    |   
    link(rel='shortcut icon', type='image/x-icon', href='https://daks2k3a4ib2z.cloudfront.net/img/favicon.ico')
    |   
    link(rel='apple-touch-icon', href='https://daks2k3a4ib2z.cloudfront.net/img/webclip.png')
  body
    .w-nav.front-menu-top(data-collapse='medium', data-animation='default', data-duration='400', data-contain='1')
      .w-container
        a.w-nav-brand.w-clearfix(href='/')
          h1.home-section-logo Cuebo
        |       
        nav.w-nav-menu(role='navigation')
          a.w-nav-link.leave-chat-button(href='/') Leave Chatroom
          img.chat-top-image(src='images/chat.png', width='54', alt='chat.png')
        |       
        .w-nav-button
          .w-icon-nav-menu
    |   
    section#chatroom.w-section
    |   
    #nameform.w-section.modal
      div.backdrop
      |     
      div.popup
        div.pophead
        |       
        div.popbody
          input#nickname.w-input.nickname-class(type='text', placeholder='Insert your name here..', name='field', required='required', autofocus='autofocus')
          |             
          input#setname.w-button.chat-set-name-button.button(type='submit', value='Submit', data-wait='Please wait...')
    |   
    .w-container
      div#messages.chat-area
      |         
      input#message.w-input.chat-text-input(type='text', placeholder='Enter your message here...', name='field', required='required', autofocus='autofocus')
      |         
      input#send.w-button.send-button.button(type='submit', value='Send', data-wait='Sending message...', wait='Sending message...')    
    |   
    |   
    script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    |   
    script(type='text/javascript', src='javascripts/webflow.js')
    |     
    script(type='text/javascript', src='/socket.io/socket.io.js')
    |   
    script(type='text/javascript', src='javascripts/chat.js')